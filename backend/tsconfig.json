{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": "backend/src",
    "sourceMap": true,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}